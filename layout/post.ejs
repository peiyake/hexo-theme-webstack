<body class="page-body boxed-container">
  <nav class="navbar horizontal-menu navbar-fixed-top">
    <div class="navbar-inner">
      <div class="navbar-brand">
        <a href="/index.html" class="logo">
          <img src="<%= theme.logo.dark %>" width="180px" alt="" class="hidden-xs">
          <img src="<%= theme.logo.expanded %>" width="180px" alt="" class="visible-xs">
        </a>
      </div>
      <div class="navbar-mobile-clear"></div>
      <% if (theme.githubCorner) { %>
      <%- theme.githubCorner %>
      <% } %>
    </div>
  </nav>
  <div class="page-container">
    <div style="float:right">
      <span>
        <em class="post-meta-item-text">Author:<%- config.author %>,</em>
      </span>
      <span id="<%- url_for(page.path) %>" class="leancloud_visitors" data-flag-title="<%- page.title %>">
        <em class="post-meta-item-text">Pageviews:</em>
        <i class="leancloud-visitors-count">loading</i>
      </span>
    </div>
  <%- page.content %>

  <% if (theme.valine && theme.valine.appid && theme.valine.appkey){ %>
  <section id="comments" class="comments" style="margin-left:0px !important">
    <style>
      .comments{margin:30px;padding:10px;background:#fff}
      @media screen and (max-width:800px){.comments{margin:auto;padding:10px;background:#fff}}
    </style>
    <%- partial('_plugins/valine', {
      key: page.slug,
      title: page.title,
      url: config.url+url_for(page.path)
    }) %>
  </section>
  <% } %>
