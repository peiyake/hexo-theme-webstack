<h4 class="text-gray"><i class="linecons-tag" style="margin-right: 7px;" id="<%= e.name %>"></i><%= e.name %></h4>
<div class="row">
    <% var i=0; %>
    <% site.posts.forEach(function(p) { %>
      <% if(e.englishName == p.type ){ %>
        <% i=i+1; %>
        <div class="col-sm-3">
          <div class="xe-widget xe-conversations box2 label-info" onclick="window.open('<%=  url_for(p.path) %>', '_blank')" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="<%= p.excerpt %>">
            <div class="xe-comment-entry">
              <a class="xe-user-img">
                  <img data-src="/images/logos/wenzhang.png" class="lozad img-circle" width="40">
              </a>
              <div class="xe-comment">
                <a href="#" class="xe-user-name overflowClip_1">
                  <strong><%= p.title %></strong>
                </a>
                <p class="overflowClip_2"><%- p.description %></p>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    <% }) %>
</div>
<br />